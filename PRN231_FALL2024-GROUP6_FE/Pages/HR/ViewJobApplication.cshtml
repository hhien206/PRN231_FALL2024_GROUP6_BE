@page
@model PRN231_FALL2024_GROUP6_FE.Pages.HR.ViewJobApplicationModel
@{
    ViewData["HideNavbar"] = true;
}
<html>
<head>
    <title>
        Quản lý CV ứng viên
    </title>
    <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #e9eef3;
        }

        .search-bar {
            margin-top: 20px;
        }

            .search-bar input, .search-bar select {
                margin-right: 10px;
            }

        .sync-banner {
            background-color: #e6f7e6;
            border: 1px solid #00b300;
            border-radius: 5px;
            padding: 10px;
            margin-top: 20px;
            display: flex;
            align-items: center;
        }

            .sync-banner img {
                margin-right: 10px;
            }

            .sync-banner a {
                margin-left: auto;
                color: #00b300;
                text-decoration: none;
            }

                .sync-banner a:hover {
                    text-decoration: underline;
                }

        .results {
            background-color: white;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
        }

        .table-container {
            background-color: white;
            border-radius: 5px;
            padding: 20px;
            margin: 20px;
        }

        .table {
            margin-bottom: 0;
        }

            .table th, .table td {
                vertical-align: middle;
            }

        .toggle-switch {
            width: 20px;
            height: 20px;
            background-color: #28a745;
            border-radius: 50%;
            display: inline-block;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .btn-custom-outline {
            border: 1px solid #28a745;
            color: #28a745;
            background-color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .text-blue {
            color: #007bff;
        }

        .text-muted {
            color: #6c757d;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("Shared/Navbar")
    <div class="container">
        <h1 class="mt-4">
            Quản lý CV ứng viên
        </h1>
        <div class="search-bar d-flex">
            <div class="input-group">
                <input class="form-control" placeholder="Tìm kiếm tên, email, số điện thoại" type="text" />
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <select class="form-select">
                <option selected="">
                    Nhập trạng thái
                </option>
            </select>
        </div>
        <div class="results">
            <p>
                Tìm thấy
                <strong>
                    0
                </strong>
                ứng viên
            </p>
            <div class="d-flex justify-content-end">
                <select class="form-select" style="width: auto;">
                    <option selected="">
                        Hiển thị tất cả CV
                    </option>
                </select>
            </div>
            <div class="container table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Chiến dịch tuyển dụng</th>
                            <th>Tối ưu</th>
                            <th>Tin tuyển dụng</th>
                            <th>CV từ hệ thống</th>
                            <th>Lọc CV</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="toggle-switch"></div>
                                <span>#1793995</span><br>
                                <span>IT Recruitment</span><br>
                                <span class="text-muted">Chưa có CV nào</span>
                            </td>
                            <td class="text-blue">27%</td>
                            <td><button class="btn btn-custom-outline">Đăng tin</button></td>
                            <td>
                                <span>CV đề xuất</span><br>
                                <span class="text-muted">Chưa kích hoạt</span><br>
                                <span class="text-blue"><i class="fas fa-eye"></i> Xem chi tiết</span>
                            </td>
                            <td><button class="btn btn-custom">Tìm CV</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js">
    </script>
</body>
</html>