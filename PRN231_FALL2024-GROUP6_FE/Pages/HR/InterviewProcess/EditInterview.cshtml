@page "{id:int}"
@model PRN231_FALL2024_GROUP6_FE.Pages.HR.InterviewProcess.EditInterviewModel
@{
    ViewData["HideNavbar"] = true;
    var interviewId = RouteData.Values["id"];
}
<!doctype html>
<html lang="en">
<head>
    <title>JobBoard &mdash; Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="/Home/css/custom-bs.css">
    <link rel="stylesheet" href="/Home/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/Home/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/Home/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/Home/fonts/line-icons/style.css">
    <link rel="stylesheet" href="/Home/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Home/css/animate.min.css">
    <link rel="stylesheet" href="/Home/css/quill.snow.css">


    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/Home/css/style.css">
</head>
<body id="top">

    @* <div id="overlayer"></div>
    <div class="loader">
    <div class="spinner-border text-primary" role="status">
    <span class="sr-only">Loading...</span>
    </div>
    </div> *@


    <div class="site-wrap">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div> <!-- .site-mobile-menu -->
        @await Html.PartialAsync("Shared/Navbar")
        <!-- JobPosting Start -->
        <section class="site-section">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-lg-12">
                        <form class="p-4 p-md-5 border rounded" method="post" enctype="multipart/form-data">
                            <h3 class="text-black mb-5 border-bottom pb-2">Interview Editing</h3>

                                <div class="col-lg-6 align-content-center">
                                    <div class="form-group">
                                        <label for="jobTitle">Result</label>
                                        <input type="text" class="form-control" asp-for="interviewProocessUpdate.Result" value="@Model.interviewProocessView.Result" placeholder="Kết Quả">
                                    </div>

                                    <div class="form-group">
                                        <label for="description">Interview Detail</label>
                                    <textarea class="form-control" asp-for="interviewProocessUpdate.Detail" placeholder="Chi tiết phỏng vấn"></textarea>
                                    </div>

                                    <div class="form-group">
                                        <label for="Status">Statuslabel>
                                        <select class="form-control" asp-for="interviewProocessUpdate.Status">
                                            <option value="PENDING">Select Status</option>
                                            <option value="PASS" selected="@(Model.interviewProocessView.Status == "PASS" ? "selected" : null)">PASS</option>
                                            <option value="FAIL" selected="@(Model.interviewProocessView.Status == "FAIL" ? "selected" : null)">FAIL</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button type="submit" class="btn btn-block btn-primary btn-md">Save Job</button>
                                        </div>
                                        <div class="col-6">
                                            <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Preview</a>
                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- JobPosting End -->
    </div>

    <!-- SCRIPTS -->
    <script src="/Home/js/jquery.min.js"></script>
    <script src="/Home/js/bootstrap.bundle.min.js"></script>
    <script src="/Home/js/isotope.pkgd.min.js"></script>
    <script src="/Home/js/stickyfill.min.js"></script>
    <script src="/Home/js/jquery.fancybox.min.js"></script>
    <script src="/Home/js/jquery.easing.1.3.js"></script>

    <script src="/Home/js/jquery.waypoints.min.js"></script>
    <script src="/Home/js/jquery.animateNumber.min.js"></script>
    <script src="/Home/js/owl.carousel.min.js"></script>
    <script src="/Home/js/quill.min.js"></script>


    <script src="/Home/js/bootstrap-select.min.js"></script>

    <script src="/Home/js/custom.js"></script>



</body>
</html>