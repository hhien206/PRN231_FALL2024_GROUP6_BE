@* @page
@model PRN231_FALL2024_GROUP6_FE.Pages.JobSkillsModel
@{
}

<h2>My Skills</h2>
<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt dolore magna aliqua. Quis</p>

<div class="skills-container">
    <div class="skills-section">
        <h4>Programming Skills</h4>
        @foreach (var skill in Model.Account.ProgrammingSkills)
        {
            <div class="skill">
                <label>@skill.Name</label>
                <div class="progress">
                    <div class="progress-bar" style="width: @skill.Percentage%;">@skill.Percentage%</div>
                </div>
            </div>
        }
    </div>

    <div class="skills-section">
        <h4>Designing Skills</h4>
        @foreach (var skill in Model.Account.DesigningSkills)
        {
            <div class="skill">
                <label>@skill.Name</label>
                <div class="progress">
                    <div class="progress-bar" style="width: @skill.Percentage%;">@skill.Percentage%</div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .skills-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .skills-section {
        flex: 1;
        min-width: 250px; /* Responsive */
    }

    .skill {
        margin-bottom: 10px;
    }

    .progress {
        background-color: #f3f3f3;
        border-radius: 5px;
        overflow: hidden;
    }

    .progress-bar {
        background-color: #d9534f;
        color: white;
        text-align: center;
        line-height: 20px;
        height: 20px;
        border-radius: 5px 0 0 5px;
    }
</style>
} *@