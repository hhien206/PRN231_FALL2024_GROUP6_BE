                            </ul>

                        </div>
                        <hr>
                        <div class="pt-2">
                            <h4 class="card-title mb-4">My Skill</h4>
                            <div class="d-flex gap-2 flex-wrap">
                                @foreach (var skill in @userProfile.AccountJobSkill)
                                {
                                    <span class="badge badge-soft-secondary p-2">@skill.JobSkillName</span>
                                }
                            </div>
                            <!-- Nút để mở popup -->
                            <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addSkillModal">
                                Thêm kỹ năng
                            </button>
                        </div>

                        <!-- Popup thêm kỹ năng -->
                        <div class="modal fade" id="addSkillModal" tabindex="-1" aria-labelledby="addSkillModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addSkillModalLabel">Thêm kỹ năng</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="addSkillForm" method="post">
                                            <div class="mb-3">
                                                <label for="skillName" class="form-label">Tên kỹ năng</label>
                                                <input type="text" class="form-control" id="skillName" name="skillName" placeholder="Nhập tên kỹ năng">
                                            </div>
                                            <!-- Thêm các trường khác nếu cần -->
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                        <button type="button" class="btn btn-primary" onclick="submitSkill()">Thêm</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <script>
                            function submitSkill() {
                                // Thêm mã xử lý để gửi form thêm kỹ năng ở đây
                                document.getElementById("addSkillForm").submit();
                            }
                        </script>

                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div>
                            <h4 class="card-title mb-4">Personal Details</h4>
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Name</th>
                                            <td>@userProfile.FullName</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Location</th>
                                            <td>@userProfile.Address</td>
