<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRN231_FALL2024_GROUP6_FE</title>

    <link rel="stylesheet" href="/Home/css/custom-bs.css">
    <link rel="stylesheet" href="/Home/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/Home/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/Home/fonts/icomoon/style.css">
    <link rel="stylesheet" href="/Home/fonts/line-icons/style.css">
    <link rel="stylesheet" href="/Home/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Home/css/animate.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/Home/css/style.css">
</head>
<body>
    <!-- NAVBAR -->
    <header class="site-navbar mt-3">
        <div class="container-fluid">
            <div class="row align-items-center">
                <nav class="mx-auto site-navigation">
                    <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">
                        @* Chỉ hiển thị navbar nếu ViewData["HideNavbar"] không được đặt hoặc là false *@
                        @if (ViewData["HideNavbar"] == null || (bool)ViewData["HideNavbar"] == false)
                        {
                            <li><a href="https://localhost:7024/Index" style="color: #19fa91;">Home</a></li>
                            <li class="has-children">
                                <a href="job-listings.html" style="color: #19fa91;">Job Listings</a>
                                <ul class="dropdown">
                                    <li><a href="job-single.html">Job Single</a></li>
                                    <li><a href="post-job.html">Post a Job</a></li>
                                </ul>
                            </li>
                            <li><a class="" asp-area="" asp-page="/JobPosting" style="color: #19fa91;">Post a Job</a></li>
                            @if (Context.Session.GetString("AccountId") == null)
                            {
                                <li><a class="" asp-area="" asp-page="/Authentication/Login" style="color: #19fa91;">Log In</a></li>
                            }
                            <li><a class="" asp-area="" asp-page="/Applicant/Profile" style="color: #19fa91;">Template</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container" style="margin-top: 70px;">
        <!-- Thêm margin-top cho nội dung chính -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
<!-- SCRIPTS -->
<script src="/Home/js/jquery.min.js"></script>
<script src="/Home/js/bootstrap.bundle.min.js"></script>
<script src="/Home/js/isotope.pkgd.min.js"></script>
<script src="/Home/js/stickyfill.min.js"></script>
<script src="/Home/js/jquery.fancybox.min.js"></script>
<script src="/Home/js/jquery.easing.1.3.js"></script>

<script src="/Home/js/jquery.waypoints.min.js"></script>
<script src="/Home/js/jquery.animateNumber.min.js"></script>
<script src="/Home/js/owl.carousel.min.js"></script>

<script src="/Home/js/bootstrap-select.min.js"></script>

<script src="/Home/js/custom.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</html>
